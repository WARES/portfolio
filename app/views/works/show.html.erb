<h1><%= @works_item.title %></h1>
  <h2><%=  @works_item.subtitle %></h2>
  <p><%=  @works_item.body %></p>
  <%= image_tag @works_item.main_image if !@works_item.main_image.nil? %>
  <%= link_to "Edit", edit_work_path(@works_item.id) if logged_in?(:site_admin) %>
<h2>Technologies Used: <h2>
  <% @works_item.technologies.each do |t| %>
  <p><%= t.name %></p>
  <% end %>
