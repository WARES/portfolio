<h2><%= link_to "#{work_item.title}", work_path(work_item.id) %></h2>
<h3><%= work_item.subtitle %></h3>
<p><%= work_item.body %></p>
<%= image_tag work_item.thumb_image unless work_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_work_path(work_item.id) %>
  <%= link_to "Show", portfolio_show_path(work_item.id) %>
  <%= link_to "Delete", work_path(work_item), method: :delete, data: {confirm: "Are you sure?"} %>
