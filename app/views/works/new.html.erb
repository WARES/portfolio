<h1>Create New Portfolio Item</h1>
<%= form_for(@works_item) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.fields_for :technologies do |technology_form| %>
        <div>
        <p>Technology Name: <%= technology_form.text_field :name %></p>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
