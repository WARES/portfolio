<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_work_path %>

<% @works_item.each do |work| %>
  <h2><%= link_to "#{work.title}", work_path(work.id) %></h2>
  <h3><%= work.subtitle %></h3>
  <p><%= work.body %></p>
  <%= image_tag work.thumb_image unless work.thumb_image.nil? %>
    <%= link_to "Edit", edit_work_path(work.id) %>
<% end %>
